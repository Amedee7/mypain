<div class="album py-5 bg-light">
	<div class="container">

		<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">

			{% for peinture in peintures %}
				<div class="col list lift-lg">
					<div class="card shadow-sm">
						<div class="card shadow-sm">
							<a href="{{ path('realisations_details', {'slug': peinture.slug}) }}" class="card-img-top">

								<img class="bd-placeholder-img card-img-top" width="50%" height="auto" style="background-image: url('img/img_3.png');" role="img" aria-label="Placeholder: Thumbnail" preserveaspectratio="xMidYMid slice" focusable="false">
									<title>Placeholder</title>
									<rect width="100%" height="100%" fill="#55595c"/><text x="50%" y="50%" fill="#eceeef" dy=".3em">{{peinture.nom}}</text>
								</img>
							</a>
							<div class="card-body">
								<p class="card-text">{{peinture.description|u.truncate(200, '...', false)}}</p>
								<div class="d-flex justify-content-between align-items-center">
									<div class="btn-group">
										<button type="button" class="btn btn-sm btn-outline-secondary">View</button>
										<button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
									</div>
									<small class="text-muted">AjoutÃ© le
										{{peinture.createdAt|date('d/m/Y')}}</small>
								</div>
							</div>
						</div>
					</div>
				</div>
			{% endfor %}

		</div>
	</div>
</div>
