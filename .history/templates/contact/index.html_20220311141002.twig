{% extends 'base.html.twig' %}

{% block title %}Hello ContactController!
{% endblock %}

{% block body %}
	<div class="container">
		<h4 class="mb-3">Me contacter</h4>
		{{form_start(form)}}
		{% for message in app.flashes('success') %}
			<div class="alert alert-success">
				{{message}}
			</div>
		{% endfor %}
		<div class="my-custom-class-for-errors">
			{{form_errors(form)}}
		</div>
		<div class="row g-3">
			<div class="col-sm-6">
				<label for="firstName" class="form-label">{{form_label(form.nom)}}</label>
				<span class="input-group-text">@</span>
				{{form_widget(form.nom)}}
				<div class="invalid-feedback">
					Valid first name is required.
				</div>
			</div>

			<div class="col-12">
				<label for="email" class="form-label">{{form_label(form.email)}}
				</label>
				{{form_widget(form.email)}}
				<div class="invalid-feedback">
					Please enter a valid email address for shipping updates.
				</div>
			</div>

			<div class="col-12">
				<label for="username" class="form-label">{{form_label(form.message)}}</label>
				<div class="input-group has-validation">
					{{form_widget(form.message)}}
					<div class="invalid-feedback">
						Your username is required.
					</div>
				</div>
			</div>
			<div class="col-12">

				<div class="invalid-feedback">
					{{form_widget(form.envoyer)}}

				</div>
			</div>
		</div>

	</div>
	{{form_end(form)}}
</div>{% endblock %}
