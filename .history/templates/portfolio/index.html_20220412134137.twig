{% extends 'base.html.twig' %}

{% block title %}Portfolio
{% endblock %}

{% block body %}
	<div class="container px-4 py-5" id="custom-cards">

		<h2 class="pb-2 border-bottom">Mes cat√©gories</h2>

		<div class="row row-cols-1 row-cols-lg-3 align-items-stretch g-4 py-5">
			{% for categorie in categories %}
				{% set peinture = categorie.peintures|last %}
				<div class="col">
					<a href="{{ path('portfolio_categorie', {'slug': categorie.slug}) }}" class="card card-cover h-100 overflow-hidden text-white bg-dark rounded-5 shadow-lg">
						<div class="d-flex flex-column h-100 p-5 pb-3 text-white text-shadow-1">
							<img src="{{ vich_uploader_asset(peinture, 'imageFile') | imagine_filter('portfolio')}}" alt="..." class="bd-placeholder-img card-img-top" role="img" aria-label="Placeholder: Thumbnail" preserveaspectratio="xMidYMid slice" focusable="false">
							<h2 class="pt-5 mt-5 mb-4 display-6 lh-1 fw-bold">{{categorie.nom}}</h2>
							<ul class="d-flex list-unstyled mt-auto">
								<li class="me-auto">
									<img src="" alt="">
								</li>
								<li class="d-flex align-items-center me-3">
									<svg class="bi me-2" width="1em" height="1em"><use xlink:href="#geo-fill"/></svg>
									<small>{{categorie.description}}</small>
								</li>
								<li class="d-flex align-items-center">
									<svg class="bi me-2" width="1em" height="1em"><use xlink:href="#calendar3"/></svg>
									<small>3d</small>
								</li>
							</ul>
						</div>
					</a>
				</div>
			{% endfor %}
		</div>
	</div>

{% endblock %}
