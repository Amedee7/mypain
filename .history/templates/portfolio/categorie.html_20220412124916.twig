{% extends 'base.html.twig' %}

{% block title %}Portfolio
{% endblock %}

{% block body %}
	{% set peinture = categorie.peintures|last %}

	<div id="myCarousel" class="carousel slide" data-bs-ride="carousel">
		<div class="carousel-indicators">
			<button type="button" data-bs-target="#myCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
			<button type="button" data-bs-target="#myCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
			<button type="button" data-bs-target="#myCarousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
		</div>
		<div class="carousel-inner">
			<div class="carousel-item active">
				<img class="bd-placeholder-img" width="100%" height="100%" style="background-image: url('{{ asset('/img/placeholder.jpg') | imagine_filter('welcome') }}')" aria-hidden="true" preserveaspectratio="xMidYMid slice" focusable="false"/>

				<div class="container">
					<div class="carousel-caption text-start">
						<h1>Une oeuvre a la une</h1>
						<p>Some representative placeholder content for the first slide of the carousel.</p>
						<p>
							<a class="btn btn-lg btn-primary" href="#">Visite</a>
						</p>
					</div>
				</div>
			</div>
		</div>
	</div>

	<div class="container px-4 py-5" id="custom-cards">

		<h2 class="pb-2 border-bottom">{{categorie.nom}}</h2>
		<small>{{categorie.description}}</small>

		<div class="row row-cols-1 row-cols-lg-3 align-items-stretch g-4 py-5">
			{% for peinture in peintures %}
				<div class="col">
					<a href="#!" class="card card-cover h-100 overflow-hidden text-white bg-dark rounded-5 shadow-lg">
						<img src="{{ vich_uploader_asset(peinture, 'imageFile') }}" alt="..." class="bd-placeholder-img card-img-top" width="100%" height="225" role="img" aria-label="Placeholder: Thumbnail" preserveaspectratio="xMidYMid slice" focusable="false">

					</a>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}
